import 'package:flutter/material.dart';

void main() {
  runApp(const MyApp());
}

class MyApp extends StatefulWidget {
  const MyApp({super.key});

  @override
  State<MyApp> createState() => _MyAppState();
}

class _MyAppState extends State<MyApp> {
  @override
  Widget build(BuildContext context) {
    return const MaterialApp(
      debugShowCheckedModeBanner: false,
      home: Welcome(),
    );
  }
}

class Welcome extends StatefulWidget {
  const Welcome({super.key});

  @override
  State<Welcome> createState() => _WelcomeState();
}

class _WelcomeState extends State<Welcome> {
  @override
  Widget build(BuildContext context) {
    // ignore: non_constant_identifier_names, unused_local_variable
    var CurrentWidth = MediaQuery.of(context).size.width;
    // ignore: non_constant_identifier_names, unused_local_variable
    var CurrentHieght = MediaQuery.of(context).size.height;

    // Variables ---------------------------------------------------------
    double mainfontsize = 16;
    double topside = 260;
    double leftside = 20;
    double containertop = 400;
    double sidefontsize = 16;

    // Screen Sized ------------------------------------------------------
    if (CurrentWidth >= 400 && CurrentHieght >= 890) {
      mainfontsize = 32;
      sidefontsize = 18;
    }
    if (CurrentWidth >= 350 &&
        CurrentHieght >= 840 &&
        CurrentWidth < 400 &&
        CurrentHieght < 890) {
      topside = topside - 50;
      mainfontsize = 30;
      containertop = 350;
    }
    if (CurrentWidth >= 350 &&
        CurrentHieght >= 820 &&
        CurrentWidth < 400 &&
        CurrentHieght < 840) {
      topside = topside - 50;
      mainfontsize = 30;
      containertop = 350;
    }

    return Scaffold(
      backgroundColor: const Color.fromARGB(0, 0, 0, 0),
      body: Expanded(
        // ignore: sized_box_for_whitespace
        child: Container(
          width: CurrentWidth,
          height: CurrentHieght,
          child: Stack(
            children: [
              Image.network(
                "https://i.pinimg.com/564x/3e/02/b0/3e02b09c1064b03a00595cce031f7bf9.jpg",
                width: CurrentWidth,
              ),
              Positioned(
                top: 40.0,
                left: 10.0,
                child: ElevatedButton.icon(
                  onPressed: () {},
                  icon: const Icon(
                    Icons.arrow_back,
                    color: Color.fromARGB(255, 255, 255, 255),
                  ),
                  label: const Text(""),
                  style: const ButtonStyle(
                      backgroundColor: WidgetStateColor.transparent),
                ),
              ),
              Positioned(
                top: topside + 40,
                left: leftside,
                child: Text(
                  "Sign in",
                  style: TextStyle(
                      fontSize: mainfontsize,
                      color: Colors.white,
                      fontWeight: FontWeight.bold),
                ),
              ),
              Positioned(
                top: topside + 80,
                left: leftside,
                child: Text(
                  "Welcome Back to our Fitness App â™¥",
                  style: TextStyle(
                      fontSize: mainfontsize - 10,
                      color: Colors.white,
                      fontWeight: FontWeight.bold),
                ),
              ),
              Positioned(
                top: containertop,
                right: 0.0,
                left: 0.0,
                // ignore: sized_box_for_whitespace
                child: Container(
                  decoration: const BoxDecoration(
                      color: Colors.white,
                      borderRadius: BorderRadius.all(Radius.circular(40.0))),
                  width: CurrentWidth,
                  height: CurrentHieght,
                  child: Padding(
                    padding: const EdgeInsets.fromLTRB(20, 0, 20, 0),
                    child: Column(
                      mainAxisAlignment: MainAxisAlignment.start,
                      crossAxisAlignment: CrossAxisAlignment.start,
                      children: [
                        const SizedBox(
                          height: 60,
                        ),
                        Text(
                          "Username",
                          style: TextStyle(fontSize: sidefontsize),
                        ),
                        const SizedBox(
                          height: 10,
                        ),
                        const TextField(
                          decoration: InputDecoration(
                              enabledBorder: OutlineInputBorder(
                                  borderSide: BorderSide(
                                      width: 2,
                                      color:
                                          Color.fromARGB(75, 118, 118, 118)))),
                        ),
                        const SizedBox(
                          height: 30,
                        ),
                        Text(
                          "Password",
                          style: TextStyle(fontSize: sidefontsize),
                        ),
                        const SizedBox(
                          height: 10,
                        ),
                        const TextField(
                          decoration: InputDecoration(
                              enabledBorder: OutlineInputBorder(
                                  borderSide: BorderSide(
                                      width: 2,
                                      color:
                                          Color.fromARGB(75, 118, 118, 118)))),
                        ),
                        const SizedBox(
                          height: 60,
                        ),
                        Row(
                          mainAxisAlignment: MainAxisAlignment.end,
                          children: [
                            Text(
                              "Forgot your Password?",
                              style: TextStyle(
                                  fontSize: sidefontsize - 2,
                                  fontWeight: FontWeight.bold),
                            ),
                          ],
                        ),
                        const SizedBox(
                          height: 20,
                        ),
                        SizedBox(
                            width: 400,
                            height: 60,
                            child: ElevatedButton(
                                style: const ButtonStyle(
                                    backgroundColor: WidgetStatePropertyAll(
                                        Color.fromARGB(255, 207, 116, 116))),
                                onPressed: () {},
                                child: const Text(
                                  "Sign in",
                                  style: TextStyle(
                                      fontSize: 20,
                                      color: Colors.white,
                                      fontWeight: FontWeight.bold),
                                ))),
                        const SizedBox(
                          height: 20,
                        ),
                        Row(
                          mainAxisAlignment: MainAxisAlignment.center,
                          children: [
                            Text(
                              "Don't have an account?",
                              style: TextStyle(fontSize: sidefontsize),
                            ),
                            Text(
                              "Sign up",
                              style: TextStyle(
                                  fontSize: sidefontsize,
                                  fontWeight: FontWeight.bold),
                            ),
                          ],
                        )
                      ],
                    ),
                  ),
                ),
              ),
            ],
          ),
        ),
      ),
    );
  }
}
